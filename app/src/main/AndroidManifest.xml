<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.seaworldtodo">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/seaworld_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.codepath.seaworldtodo.activities.SplashScreenActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.codepath.seaworldtodo.activities.EditItemActivity" />
        <activity
            android:name="com.codepath.seaworldtodo.activities.CreateTodoItemActivity"
            android:icon="@drawable/seaworld_splash"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>